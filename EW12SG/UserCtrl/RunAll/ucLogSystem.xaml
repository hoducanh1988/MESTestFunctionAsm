<UserControl x:Class="EW12SG.UserCtrl.ucLogSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EW12SG.UserCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550" Background="White">

    <ScrollViewer x:Name="Scr_LogSystem">
        <RichTextBox IsReadOnly="True" Margin="0,0,1,2" Padding="5,5,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding Path=LogSystem, UpdateSourceTrigger=PropertyChanged}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </ScrollViewer>
    
</UserControl>
